<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_margin="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mul_edit_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="退出"/>
            <Button
                android:id="@+id/mul_edit_out"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="导出"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_gravity="center">
            <VideoView
                android:id="@+id/mul_edit_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <android.opengl.GLSurfaceView
                android:id="@+id/edit_opengl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/mul_edit_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00:00"/>
            <Button
                android:id="@+id/mul_edit_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="播放/暂停"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#eeeeee">
        <com.nxtech.app.alldemo.ui.EditorTrackView
            android:id="@+id/mul_editor_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mul_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="文字"/>
            <Button
                android:id="@+id/mul_edit_audio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="音频"/>
            <Button
                android:id="@+id/mul_opengl_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="测试opengl"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>